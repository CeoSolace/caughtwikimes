{
  "name": "caughtwiki",
  "version": "1.0.0",
  "description": "A Discord clone platform with advanced features",
  "main": "server/app.ts",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "node dist/server/app.js",
    "server": "ts-node server/app.ts",
    "dev:server": "nodemon server/app.ts",
    "dev:client": "next dev",
    "type-check": "tsc --noEmit",
    "build:server": "tsc -p tsconfig.server.json",
    "prepare": "npm run build"
  },
  "dependencies": {
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "express-session": "^1.17.3",
    "passport": "^0.6.0",
    "passport-discord": "^0.1.4",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/express-session": "^1.17.7",
    "@types/passport": "^1.0.12",
    "@types/socket.io": "^3.0.2"
  },
  "devDependencies": {
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.1"
  }
}
